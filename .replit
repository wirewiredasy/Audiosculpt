modules = ["python-3.11", "nodejs-20", "web"]

[nix]
channel = "stable-25_05"
packages = ["ffmpeg", "ffmpeg-full", "libsndfile", "libxcrypt", "openssl", "pkg-config", "postgresql", "xsimd"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]
runButton = "FastAPI Server"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_audio_deps"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "install_audio_deps"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add librosa soundfile pydub noisereduce mutagen scipy"

[[workflows.workflow]]
name = "Start FastAPI"
author = 45907076
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Start Server"
author = 45907076
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "FastAPI Server"
author = 45908001
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn backend.main:app --host 0.0.0.0 --port 5000 --reload"

[[ports]]
localPort = 5000
externalPort = 80
